<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/fragDetails"
        android:name="com.example.youtubevideogmbn.DetailsFragment"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_details"
        tools:ignore="FragmentTagUsage" />

    <fragment
        android:id="@+id/fragComment"
        android:name="com.example.youtubevideogmbn.ComentListFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragComment"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="FragmentTagUsage"
        tools:layout="@layout/fragment_coment_list"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>